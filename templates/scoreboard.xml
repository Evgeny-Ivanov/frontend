
<fest:template xmlns:fest="http://fest.mail.ru" context_name="scores">
    <div class = "row">
        <div class="col-md-4" ></div>

        <div class="col-md-4 center">
        	<h1>Scoreboard</h1>
            <ul class='players'>
            <fest:each iterate="scores" index="i" value="v">
                <li> 
                    <fest:value>v.name</fest:value>
                    <fest:space/>:<fest:space/>   
                    <fest:value>v.score</fest:value> 
                </li>
            </fest:each>
            </ul>
        </div>

        <div class="col-md-4"></div>

    </div>

    <div class="row">
    	<div class="col-md-3"></div>
    	<div class="col-md-1"><a href="#"><button type="button" class="btn btn-default back-in-main-menu">Назад</button></a></div>
    	<div class="col-md-8"></div>
    </div>


</fest:template>